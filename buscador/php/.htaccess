# Habilita el almacenamiento en caché
<IfModule mod_headers.c>
    Header set Cache-Control "max-age=31536000, public"
</IfModule>

# Configuración de caché para archivos específicos
<FilesMatch "\.(jpg|jpeg|png|gif|css|js|svg)$">
    Header set Cache-Control "max-age=31536000, public"
</FilesMatch>
